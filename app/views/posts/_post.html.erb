<div id="<%= dom_id post %>" class="bg-blue-100 p-5 rounded-lg">
  <p class="my-5">
    <strong class="block font-medium mb-1 text-blue-700">Title:</strong>
    <%= post.title %>
    <% if post.images.attached? %>
      <div class="flex space-x-2 mt-3">
        <% post.images.each do |image| %>
          <%= image_tag(image.variant(resize_to_limit: [200, 200]), class: "rounded-lg shadow-md") %>
        <% end %>
      </div>
    <% end %>
  </p>

  <% if action_name != "show" %>
    <div class="mt-4">
      <%= link_to "Show this post", post, class: "rounded-lg py-2 px-4 bg-blue-500 text-white inline-block font-medium hover:bg-blue-600" %>
      <%= link_to "Edit this post", edit_post_path(post), class: "rounded-lg py-2 px-4 ml-2 bg-blue-500 text-white inline-block font-medium hover:bg-blue-600" %>
    </div>
    <hr class="mt-6">
  <% end %>
</div>
